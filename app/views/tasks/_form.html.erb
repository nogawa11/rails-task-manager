  <%= form_for(@task) do |f| %>
    <strong><%= f.label :title, class: 'form-label'%></strong>
    <%= f.text_field :title, class: 'form-control'%>
    <strong><%= f.label :details, class: 'form-label mt-2' %></strong>
    <%= f.text_area :details, class: 'form-control' %>
    <% if @task.persisted? %>
      <div class="form-check mt-2">
        <%= f.label :completed, class: 'form-check-label' %>
        <%= f.check_box :completed, class: 'form-check-input' %>
      </div>
    <% end %>
    <%= f.submit class: 'btn btn-primary mt-3' %>
  <% end %>
